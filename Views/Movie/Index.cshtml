@model IEnumerable<CruiseshipApp.Models.Movie_ticket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Movie/Movie_LayoutPage.cshtml";
}


<center>
    <h2>Manage Movie</h2>
    <div>
        @Html.ActionLink("Home", "EMovie", "Employee", new { area = "" }, new { @class = "nav-link" }) |
        @Html.ActionLink("Manage Movie", "Index", "Movie", new { area = "" }, new { @class = "nav-link" }) |
        @Html.ActionLink("Logout", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
    </div>
</center>

@if (TempData["AlertMessage"] != null)
{
    <div class="alert-success">
        <strong>Success !</strong> @TempData["AlertMessage"]
    </div>
}
<p>
    @Html.ActionLink("Add Movie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Movie
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Screen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
@*        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movie_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Screen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
@*            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Movie_id }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.Movie_id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.Movie_id })
            </td>
        </tr>
    }

</table>
