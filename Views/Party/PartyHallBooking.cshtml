@model IEnumerable<CruiseshipApp.Models.Party_hall>

@{
    ViewBag.Title = "PartyHallBooking";
    Layout = "~/Views/Home/Voyager_LayoutPage.cshtml";
}

<center>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />


    <h1>PARTY HALL BOOKING</h1>
    <br />

    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-info ">
            <strong>@TempData["AlertMessage"]</strong> 
        </div>
    }

</center>

<a href="ViewBookings" class="btn btn-info"> My Bookings</a>
<br />
<br />




<table class="table">
    <tr>
        <th>
            Hall Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Occasion)
        </th>
        <th>
            Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        @*  <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hall_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Occasion)
            </td>
            <td>
                <img src="@Url.Content(item.Image)" width="120" height="80" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            @*   <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>*@
            <td>

                <a href="Book?id=@item.Hall_id" class="btn btn-success"> Book</a>
            </td>
        </tr>
    }

</table>
