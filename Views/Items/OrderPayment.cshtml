    <h1>ORDER PAYMENT</h1>

    <br />
    <form method="Post" action="/Items/ConfirmPayment">
        <table>
            <tr>
                <td>
                    <label for="co">Card Owner</label><br>
                    <input type="text" id="co" name="co" class="form-control" required /><br>
                </td>
            </tr>

            <tr>
                <td>
                    <label for="cn">Card Number</label><br>
                    <input type="text" id="cn" name="cn" class="form-control" required /><br>
                </td>
            </tr>

            <tr>
                <td>
                    <label>Expiry Date</label><br>
                    <input type="number" id="mm" value="MM" name="mm" min="1" max="12" class="form-control" required /><br>
                    <input type="number" id="yy" value="YY" name="yy" min="20" max="99" class="form-control" required /><br>
                </td>
            </tr>

            <tr>
                <td>
                    <label for="cvv">CVV</label><br>
                    <input type="text" id="cvv" name="cvv" class="form-control" required /><br>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" name="ConfirmPayment" class="btn btn-success" value="ConfirmPayment" /><br /><br />
                </td>
            </tr>
            <tr>
                <td>
                    <a href="ViewOrders" class="btn btn-danger">Cancel</a>
                </td>
            </tr>
        </table>
    </form>

    @*@Html.ActionLink("View Orders", "ViewOrders", "Items", new { area = "" }, new { @class = "nav-link" })*@

</center>