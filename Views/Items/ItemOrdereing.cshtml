@model IEnumerable<CruiseshipApp.Models.Item>

@{
    ViewBag.Title = "ItemOrdereing";
    Layout = "~/Views/Items/Items_LayoutPage.cshtml";
}

<center>
    <h2>ItemOrdereing</h2>
</center>

@if (TempData["AlertMessage"] != null)
{
    <div class="alert-success">
        <strong>Success !</strong> @TempData["AlertMessage"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Item_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item_name)
            </td>
            <td>
                <img src="@Url.Content(item.Image)" width="120" height="80" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.ActionLink("Add to Cart", "Cart", new { id = item.Item_id })
            </td>
        </tr>


    }

</table>

@Html.ActionLink("Buy", "Buy", new { /* id = Model.PrimaryKey */ })
