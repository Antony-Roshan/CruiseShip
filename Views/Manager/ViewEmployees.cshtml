@model IEnumerable<CruiseshipApp.Models.Employee>

@{
    ViewBag.Title = "ViewEmployees";
    Layout = "~/Views/Manager/Manager_LayoutPage.cshtml";
}

<center>
    <h2>View Employees</h2>
    <div>
        @Html.ActionLink("Home", "Manager", "Manager", new { area = "" }, new { @class = "nav-link" }) |
        @Html.ActionLink("Manage Premium Voyagers", "AcceptPremiumVoyager", "Manager", new { area = "" }, new { @class = "nav-link" }) |
        @Html.ActionLink("Logout", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
    </div>
</center>
    <p>
        @Html.ActionLink("Add New", "AddEmployee")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteEmployee", new { id = item.Employee_id })
                </td>
            </tr>
        }
    </table>
